.submit-wrap{display: inline; }
.post-title-wrap{height: 45px; width: 100%; min-height: 0px;border-top: 10px solid rgb(245, 245, 245); }
.post-title{height: 25px; line-height: 25px; font-family: monospace; white-space: pre-wrap;font: 13.3333px Arial;padding: 10px 6px 0px 6px;}
.post-mainbody-wrap{height: 200px; border-width: 1px; border-style: none; border-top-style: solid; }
.post-mainbody{height: 200px;padding: 6px; font-family: monospace; white-space: pre-wrap;font: 13.3333px Arial; }
.post-submit-container{height: 45px; min-height: 0px; position: relative; right: 0px; }
.post-position-wrap{height: 30px; width: 120px; min-height: 0px; margin-left: 20px; margin-top: 7px; padding-top: 7px; padding-bottom: 7px; display: inline-block; margin-bottom: auto; left: 0px; right: 0px; top: 0px; bottom: 0px; position: relative; border-width: 0px; border-style: none; background-color: rgb(247, 247, 247); border-radius: 20px; }
.post-position-text{position: absolute; right: 2px; margin-top: auto; margin-bottom: 0px; display: inline-block; height: 16px; font-size: 12px; text-align: center; text-indent: 0px; line-height: 16px; z-index: 0; width: 100px; }
.post-position-icon{height: 16px; width: 16px; margin-left: 10px; }
.post-submit{display: inline-block; height: 30px; min-height: 0px; width: 60px; margin-top: 7px; position: absolute; right: 20px; line-height: 30px; text-align: center; font-size: 12px; background-size: initial; }